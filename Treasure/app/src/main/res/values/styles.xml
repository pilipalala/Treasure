<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CollapsingToolbarLayoutTheme">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Toolbar主题设置-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--对应的就是右上角三个圆点的颜色-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--Toolbar 标题文字颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 设置 toolbar 溢出菜单和自定义文字的颜色 -->
        <item name="android:textColor">@color/white</item>
        <!-- 设置toolbar 菜单的字体大小和溢出菜单文字大小-->
        <item name="android:textSize">14sp</item>
        <!-- 设置 toobar上菜单文字的颜色 -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!--Toolbar 菜单样式 菜单背景颜色-->
        <item name="android:colorBackground">@color/spinner_bg</item>
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

    <style name="default_button_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@drawable/ripple_bordered</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textStyle"></style>

    <style name="textStyle.Normal">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 普通号 , 黑色 -->
    <style name="textStyle.Normal.black" parent="textStyle.Normal">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <!--Dialog的windowFrame有无无边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮在activity上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置dialog的背景 透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_from_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_bottom_out</item>
    </style>

    <style name="dialog_scal_anim">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_scale</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="Widget.KeyboardView" parent="android:Widget">
        <item name="android:keyTextSize">22sp</item>
        <item name="android:keyTextColor">@color/black</item>
        <item name="android:keyPreviewOffset">-12dip</item>
        <item name="android:keyPreviewHeight">80dip</item>
        <item name="android:labelTextSize">14sp</item>
        <item name="android:verticalCorrection">-10dip</item>
        <item name="android:background">@color/gray</item>
        <item name="android:keyBackground">@drawable/bg_keyboard_selector</item>
        <item name="android:shadowColor">#bb000000</item>
        <item name="android:keyPreviewLayout">@layout/key_preview_layout</item>
        <item name="android:shadowRadius">0</item>//防止文字发虚
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- loading 样式 -->
    <style name="loadstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/iosstyle_halftransparent_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--对1像素的Style进行特殊处理-->
    <style name="SingleActivityStyle" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>
</resources>
