<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Toolbar主题设置-->
    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- 更换Toolbar OVerFlow menu icon -->
        <!--<item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.More</item>-->
        <!--对应的就是右上角三个圆点的颜色-->
        <item name="android:textColorSecondary">#FFFFFF</item>
        <!--Toolbar 标题文字颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 设置 toolbar 溢出菜单和自定义文字的颜色 -->
        <item name="android:textColor">@color/white</item>
        <!-- 设置toolbar 菜单的字体大小和溢出菜单文字大小-->
        <item name="android:textSize">14sp</item>
        <!-- 设置 toobar上菜单文字的颜色 -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!--Toolbar 菜单样式 菜单背景颜色-->
        <item name="android:colorBackground">@color/spinner_bg</item>
    </style>
    <!--修改toolbar弹出菜单的位置-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>


    <!--android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/spinner_bg"
                android:text="发送一个 FLAG_ONGONG_EVENT 的通知,不能被移除"
                android:textAllCaps="false"
                android:textColor="@color/white" -->
    <style name="default_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:background">@color/spinner_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textStyle"></style>
    <style name="textStyle.Normal">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 普通号 , 黑色 -->
    <style name="textStyle.Normal.black" parent="textStyle.Normal">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
