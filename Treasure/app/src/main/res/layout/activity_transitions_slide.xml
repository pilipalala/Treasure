<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.wyj.treasure.activity.transition.TransitionsSlideActivity">


    <TextView
        android:id="@+id/red_box"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/red"
        android:gravity="center"
        android:text="Fade"
        android:textColor="@color/white"
        android:transitionName="@string/square_blue_name" />

    <TextView
        android:id="@+id/green_box"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_toRightOf="@+id/red_box"
        android:background="@color/green"
        android:gravity="center"
        android:text="Slide"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/blue_box"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/red_box"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Explode"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/black_box"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/red_box"
        android:layout_margin="@dimen/dp_10"
        android:layout_toRightOf="@+id/blue_box"
        android:background="@color/black"
        android:gravity="center"
        android:text="no"
        android:textColor="@color/white" />


</RelativeLayout>
