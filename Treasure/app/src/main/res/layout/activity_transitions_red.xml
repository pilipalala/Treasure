<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyj.treasure.activity.transition.TransitionsRedActivity">

    <include layout="@layout/title" />

    <TextView
        android:id="@+id/red_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/red"
        android:gravity="center"
        android:text="Fade"
        android:textColor="@color/white"
        android:transitionName="@string/square_red_name" />

    <TextView
        android:id="@+id/green_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/green"
        android:gravity="center"
        android:text="Slide"
        android:textColor="@color/white"
        android:transitionName="@string/square_green_name" />

    <TextView
        android:id="@+id/blue_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/blue"
        android:gravity="center"
        android:text="Explode"
        android:textColor="@color/white"
        android:transitionName="@string/square_blue_name" />

    <TextView
        android:id="@+id/black_box"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/red_box"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/black"
        android:gravity="center"
        android:text="no"
        android:textColor="@color/white"
        android:transitionName="@string/square_black_name" />


</LinearLayout>
