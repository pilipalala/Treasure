<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wyj.treasure.activity.transition.TransitionsRedActivity">


    <TextView
        android:id="@+id/red_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/big_square_blue"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_10"
        android:text="这是个过渡动画"
        android:textColor="@color/black" />

    <View
        android:id="@+id/big_square_blue"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@android:color/holo_blue_light"
        android:transitionName="@string/square_blue_name" />
</RelativeLayout>
