<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/spinner_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_noty"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tag_tv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/iv_noty"

        android:background="@color/read"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tag_tv"
        android:layout_toRightOf="@+id/iv_noty"
        android:background="@color/pink_little"
        android:text="@string/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_prompt"
        android:layout_toRightOf="@+id/iv_noty"
        android:background="@color/pink_little"
        android:text="@string/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_noty"
        android:background="@color/pink_little"
        android:text="@string/app_name" />

</RelativeLayout>