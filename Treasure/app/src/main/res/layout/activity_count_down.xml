<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <Button
        android:id="@+id/btn_runnable"
        style="@style/default_button_style"
        android:text="第一种实现方式：自定义倒计时类，实现Runnable接口"
        android:textAllCaps="false" />

    <com.wyj.countdown.CountDownTimerButton
        android:id="@+id/btn_countDownButton"
        style="@style/default_button_style"
        android:text="第二种实现方式：自定义Button"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_countDownTimer"
        style="@style/default_button_style"
        android:text="第三种实现方式：使用 CountDownTimer"
        android:textAllCaps="false" />

</LinearLayout>
