<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_collect_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="189路-七宝"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_start_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="起点至终点"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/tv_collect_station" />

    <TextView
        android:id="@+id/tv_station_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离到站100米"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_collect_station" />

    <TextView
        android:id="@+id/tv_station_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离到站5分钟"
        android:textSize="@dimen/sp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_start_end" />

</android.support.constraint.ConstraintLayout>