<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyj.treasure.viewcustom.bannerviewpager.BannerViewPagerActivity">

    <com.wyj.treasure.viewcustom.bannerviewpager.BannerView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:bottomColor="#88000000"
        app:dotDistance="@dimen/dp_8"
        app:dotGravity="right"
        app:dotIndicatorFocus="@color/sandybrown"
        app:dotIndicatorNormal="@color/ligntgray"
        app:dotSize="@dimen/dp_5"
        app:heightProportion="3"
        app:withProportion="5" />

</LinearLayout>
