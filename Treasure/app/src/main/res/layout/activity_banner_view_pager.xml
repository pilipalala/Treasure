<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:orientation="vertical"
    tools:context="com.wyj.bannerviewpager.BannerViewPagerActivity">


    <com.wyj.bannerviewpager.BannerView
        android:id="@+id/banner_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomColor="#88000000"
        app:dotDistance="@dimen/dp_8"
        app:dotGravity="right"
        app:dotIndicatorFocus="@color/sandybrown"
        app:dotIndicatorNormal="@color/ligntgray"
        app:dotSize="@dimen/dp_5"
        app:heightProportion="564"
        app:withProportion="1000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/announcement_publisher"
        android:text="@string/lrc" />


</LinearLayout>
