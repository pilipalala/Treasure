<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="属性名"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="口味"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.wyj.treasure.tagview.TagView
        android:id="@+id/tagview_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:lineMargin="10dp"
        app:tagMargin="10dp"
        app:textPaddingBottom="3dp"
        app:textPaddingLeft="10dp"
        app:textPaddingRight="10dp"
        app:textPaddingTop="3dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center|right"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_detele_attr"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_notify_attr"
            android:background="@drawable/shap_add_attr"
            android:gravity="center"
            android:text="删除"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_notify_attr"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/shap_add_attr"
            android:gravity="center"
            android:text="修改 "
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
</LinearLayout>