<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyj.spannable.SpannableStringActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="@style/default_button_style"
                android:onClick="ForegroundColor"
                android:text="设置文字的前景色为淡蓝色" />

            <Button
                style="@style/default_button_style"
                android:onClick="BackgroundColor"
                android:text="设置文字的前景色为淡蓝色" />

            <Button
                style="@style/default_button_style"
                android:onClick="RelativeSize"
                android:text="万丈高楼平地起(设置字体相对大小)" />

            <Button
                style="@style/default_button_style"
                android:onClick="AbsoluteSizeSpan"
                android:text="万丈高楼平地起(设置字体绝对大小)" />

            <Button
                style="@style/default_button_style"
                android:onClick="ScaleXSpan"
                android:text="万丈高楼平地起(设置字体宽度大小)" />


            <Button
                style="@style/default_button_style"
                android:onClick="StrikethroughSpan"
                android:text="为文字设置删除线" />


            <Button
                style="@style/default_button_style"
                android:onClick="Underline"
                android:text="为文字设置下划线" />


            <Button
                style="@style/default_button_style"
                android:onClick="Superscript"
                android:text="为文字设置上标" />


            <Button
                style="@style/default_button_style"
                android:onClick="Subscript"
                android:text="为文字设置下标" />

            <Button
                style="@style/default_button_style"
                android:onClick="StyleSpan"
                android:text="为文字设置粗体、斜体风格" />

            <Button
                style="@style/default_button_style"
                android:onClick="ImageSpan"
                android:text="在文本中添加表情" />

            <Button
                style="@style/default_button_style"
                android:onClick="ClickableSpan"
                android:text="为文字设置点击事件" />

            <Button
                style="@style/default_button_style"
                android:onClick="URLSpan"
                android:text="为文字设置超链接" />

            <Button
                style="@style/default_button_style"
                android:onClick="MaskFilterSpan"
                android:text="为文字设置模糊和浮雕效果" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
